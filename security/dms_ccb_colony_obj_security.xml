<?xml version="1.0"?>
<odoo>

	<!-- Define category & user group declarations for our app here -->

	<!-- ****** -->

	<!-- Category definition for Colony object -->
	<record id="dms_ccb_colony_obj_category" model="ir.module.category">
		<field name="name">CCB: Colony</field>
	</record>

	<!-- DMS CCB User Group definition here for Colony object -->
	<record id="dms_ccb_colony_obj_read_group" model="res.groups">
		<field name="name">103 - Read</field>
		<field name="category_id" ref="dms_ccb_colony_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('base.group_user'))]"></field>
	</record>

	<!-- DMS CCB User Group definition here for Colony object -->
	<record id="dms_ccb_colony_obj_write_group" model="res.groups">
		<field name="name">103 - Write</field>
		<field name="category_id" ref="dms_ccb_colony_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_colony_obj_read_group'))]"></field>
	</record>

	<!-- DMS CCB User Group definition here for Colony object -->
	<record id="dms_ccb_colony_obj_create_group" model="res.groups">
		<field name="name">103 - Create</field>
		<field name="category_id" ref="dms_ccb_colony_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_colony_obj_read_group'))]"></field>
	</record>

	<!-- DMS CCB User Group definition here for Colony object -->
	<record id="dms_ccb_colony_obj_unlink_group" model="res.groups">
		<field name="name">103 - Delete</field>
		<field name="category_id" ref="dms_ccb_colony_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_colony_obj_read_group')),(4, ref('dms_ccb_colony_obj_write_group'))]"></field>
	</record>

	<!-- ****** -->

</odoo>