<?xml version="1.0"?>
<odoo>

	<!-- Define category & user group declarations for our app here -->

	<!-- ****** -->

	<!-- Category definition for File object -->
	<record id="dms_ccb_file_obj_category" model="ir.module.category">
		<field name="name">CCB: File</field>
	</record>

	<!-- DMS CCB User Group definition here for File object -->
	<record id="dms_ccb_file_obj_read_group" model="res.groups">
		<field name="name">1. Read</field>
		<field name="category_id" ref="dms_ccb_file_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('base.group_user'))]"></field>
	</record>

	<!-- DMS CCB Manager Group definition here for File object -->
	<record id="dms_ccb_file_obj_write_group" model="res.groups">
		<field name="name">2. Write</field>
		<field name="category_id" ref="dms_ccb_file_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_file_obj_read_group'))]"></field>
		<!-- <field name="users"
				eval= "[(4,ref('base.user_root')),
						(4,ref('base.user_admin'))]"></field> -->
	</record>

	<!-- DMS CCB Admin Group definition here for File object -->
	<record id="dms_ccb_file_obj_create_group" model="res.groups">
		<field name="name">3. Create</field>
		<field name="category_id" ref="dms_ccb_file_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_file_obj_read_group'))]"></field>
		<!-- <field name="users"
				eval= "[(4,ref('base.user_root')),
						(4,ref('base.user_admin'))]"></field> -->
	</record>

	<!-- DMS CCB Admin Group definition here for File object -->
	<record id="dms_ccb_file_obj_unlink_group" model="res.groups">
		<field name="name">4. Delete</field>
		<field name="category_id" ref="dms_ccb_file_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_ccb_file_obj_read_group')),(4, ref('dms_ccb_file_obj_write_group'))]"></field>
		<!-- <field name="users"
				eval= "[(4,ref('base.user_root')),
						(4,ref('base.user_admin'))]"></field> -->
	</record>

	<!-- ****** -->

</odoo>