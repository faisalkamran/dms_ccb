<?xml version="1.0"?>
<odoo>

	<!-- Define category & user group declarations for our app here -->

	<!-- ****** -->

	<!-- Category definition for Rejection Reasons object -->
	<record id="dms_meo_rej_reasons_obj_category" model="ir.module.category">
		<field name="name">MEO: QC Reason</field>
	</record>

	<!-- DMS MEO User Group definition here for Rejection Reasons object -->
	<record id="dms_meo_rej_reasons_obj_read_group" model="res.groups">
		<field name="name">207 - Read</field>
		<field name="category_id" ref="dms_meo_rej_reasons_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('base.group_user'))]"></field>
	</record>

	<!-- DMS MEO User Group definition here for Rejection Reasons object -->
	<record id="dms_meo_rej_reasons_obj_write_group" model="res.groups">
		<field name="name">207 - Write</field>
		<field name="category_id" ref="dms_meo_rej_reasons_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_meo_rej_reasons_obj_read_group'))]"></field>
	</record>

	<!-- DMS MEO User Group definition here for Rejection Reasons object -->
	<record id="dms_meo_rej_reasons_obj_create_group" model="res.groups">
		<field name="name">207 - Create</field>
		<field name="category_id" ref="dms_meo_rej_reasons_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_meo_rej_reasons_obj_read_group'))]"></field>
	</record>

	<!-- DMS MEO User Group definition here for Rejection Reasons object -->
	<record id="dms_meo_rej_reasons_obj_unlink_group" model="res.groups">
		<field name="name">207 - Delete</field>
		<field name="category_id" ref="dms_meo_rej_reasons_obj_category"></field>
		<field name="implied_ids"
				eval="[(4, ref('dms_meo_rej_reasons_obj_read_group')),(4, ref('dms_meo_rej_reasons_obj_write_group'))]"></field>
	</record>

	<!-- ****** -->

</odoo>