<?xml version="1.0"?>

<odoo>
	
	<record id="dms_file_checkout_popup_form" model="ir.ui.view">
		<field name="name">DMS Checkout Popup Form View</field>
		<field name="model">dms_ccb.file_checkout_popup</field>
		<field name="arch" type="xml">
			<form string="Warning! Do you want to continue?">
				<group>
					<group>
						<field name="popup_file_assigned_to"></field>						
					</group>
					<group>
						
					</group>
				</group>
				<group>
					<field name="checkout_file_message"></field>
				</group>
				<footer>
					<button name="action_checkout_dms_file" string="Submit" type="object" class="btn-primary"></button>
					<button string="Cancel" class="btn-secondary" special="cancel"></button>
				</footer>
			</form>
		</field>
	</record>

	<record id="create_checkout_file_popup" model="ir.actions.act_window">
		<field name="name">Checkout File?</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">dms_ccb.file_checkout_popup</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="dms_file_checkout_popup_form"></field>
		<field name="target">new</field>
	</record>
	
</odoo>