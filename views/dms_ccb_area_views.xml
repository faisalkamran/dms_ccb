<?xml version="1.0"?>

<odoo>
	<record id="dms_ccb_area_form_view" model="ir.ui.view">
		<field name="name">Area Form</field>
		<field name="model">dms_ccb.file_area</field>
		<field name="arch" type="xml">
			<form string="Area">
				<header>
					<!-- Buttons will go here -->
				</header>
				<sheet>
					<!-- Content will go here -->
					<group name="top_group">
						<group name="left_group">
							<field name="file_area"></field>
						</group>
						<group name="right_group">
							<field name="file_area_description"></field>
						</group>
					</group>
				</sheet>
			</form>			
		</field>		
	</record>

	<record id="dms_ccb_area_list_view" model="ir.ui.view">
		<field name="name">Area List</field>
		<field name="model">dms_ccb.file_area</field>
		<field name="arch" type="xml">
			<tree>
				<field name="file_area"></field>
				<field name="file_area_description"></field>							
			</tree>
		</field>		
	</record>

</odoo>