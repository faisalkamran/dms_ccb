<?xml version="1.0"?>

<odoo>
	<record id="dms_meo_purpose_form_view" model="ir.ui.view">
		<field name="name">Purpose Form</field>
		<field name="model">dms_meo.file_purpose</field>
		<field name="arch" type="xml">
			<form string="Purpose">
				<header>
					<!-- Buttons will go here -->
				</header>
				<sheet>
					<!-- Content will go here -->
					<group name="top_group">
						<group name="left_group">
							<field name="file_purpose"></field>
						</group>
						<group name="right_group">
							<field name="file_purpose_description"></field>
						</group>
					</group>
				</sheet>
			</form>			
		</field>		
	</record>

	<record id="dms_meo_purpose_list_view" model="ir.ui.view">
		<field name="name">Purpose List</field>
		<field name="model">dms_meo.file_purpose</field>
		<field name="arch" type="xml">
			<tree>
				<field name="file_purpose"></field>
				<field name="file_purpose_description"></field>							
			</tree>
		</field>		
	</record>

</odoo>