<odoo>

	<template id="my_custom_assets" name="My Custom Assets">
		<!-- <link rel="stylesheet" type="text/scss" href="/dms_ccb/static/src/scss/my_scss.scss"/> -->
		<link rel="stylesheet" type="text/css" href="/dms_ccb/static/src/scss/w3.css"/>
		<script type="text/JavaScript" src="/dms_ccb/static/src/js/widgets/my_JavaScript.js"/>
